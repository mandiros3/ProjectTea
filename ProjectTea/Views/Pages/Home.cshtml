@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.IList<ProjectTea.Models.Track>>

@{

    Layout = "Views/Layouts/Master.cshtml";
    ViewBag.Title = "Home";
}

<article class="col-sm-8">
    <h1>Best Tracks </h1>
    <p>The list of songs discovered when they were under 10, 000 views sorted by: </p>
    <button class="btn btn-danger">Genre</button>
    <button class="btn btn-warning">Mood</button>
    <button class="btn btn-success">Decade</button>
    <button class="btn btn-primary">All</button>
    <form action="/track" method="get">
        <input id="id" name="id" />
        <button type="submit">Search</button>
    </form>

    <hr/>

    @if (Model.Count == 0)
    {
        <section class="well">
            <h3>You have nothing here! Please Add new Track</h3>
            <a href="/track/new"> New Track</a>
        </section>
    }
    else
    {
        foreach (var item in Model)
        {
            <section class="well">
                <h4>@item.Title</h4>
                <p>@item.Artist</p>
                <p>@item.GenreId</p>
                <p>@item.Year</p>
                <p>@item.MoodId</p>
            </section>
        }
    }

</article>
<article class="col-sm-4">
    @Html.Partial("Views/Layouts/AddURL.cshtml")
    <br/>
    @Html.Partial("Views/Layouts/Track.cshtml")
</article>
